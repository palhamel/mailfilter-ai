MAIL_USER=
MAIL_PASSWORD=
IMAP_HOST=                    # e.g. mail.provider.com
SMTP_HOST=                    # e.g. mail.provider.com
MAILBOX_CHECK_INTERVAL_MINUTES=60
NOTIFY_EMAIL=
# Job profile path (markdown file with candidate preferences, tech stack, deal-breakers)
PROFILE_PATH=./profile.md
# AI provider: mistral (default) or berget (EU-sovereign, OpenAI-compatible)
AI_PROVIDER=mistral
# Mistral (default provider)
MISTRAL_API_KEY=              # From https://console.mistral.ai
MISTRAL_MODEL=mistral-small-latest
# Berget AI (optional, EU-hosted inference - https://berget.ai)
# BERGET_API_KEY=             # From https://console.berget.ai
# BERGET_MODEL=llama-3.3-70b-instruct
# LOG_DIR is where logs and error dumps will be stored. Make sure this directory exists and is writable.
LOG_DIR=./data/logs
# Notify via Discord webhook (optional), for errors and status updates. Set to empty string to disable.
DISCORD_WEBHOOK_URL=          # Optional: Discord webhook for error/status notifications
# HTTP health endpoint port for external monitoring (Uptime Kuma)
HEALTH_PORT=3000
